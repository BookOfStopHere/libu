export makl_conf_h=`pwd`/conf.h

os_detect () {
    rsname=`uname -rs | tr [A-Z] [a-z] | sed -e 's/ //'`

    case ${rsname} in

        *-*-mingw*)
            makl_set_var_h      "OS_WIN"
        ;;

        *)
            makl_set_var_h      "OS_UNIX"
        ;;
    esac
}

# Handlers
_makl_enable_debug () {
    makl_add_var_mk     "CFLAGS"    "-g"
}
_makl_enable_profile () {
    makl_add_var_mk     "CFLAGS"    "-pg"
}
